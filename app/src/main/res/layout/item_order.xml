<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    android:clickable="true"
    android:id="@+id/itemOrder">
    <TextView
        android:id="@+id/tvReceiverName"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        tools:text="@tools:sample/lorem[4:10]"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ivProduct"
        android:clickable="false"
        android:textSize="14dp"
        android:textStyle="bold"
        />

    <!-- Ảnh đại diện -->
    <ImageView
        android:id="@+id/ivProduct"
        android:layout_width="50dp"
        android:layout_height="50dp"
        tools:src="@tools:sample/avatars"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:clickable="false"/>

    <TextView
        android:id="@+id/tvNameProduct"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="5dp"
        android:textColor="@android:color/black"
        android:textSize="13dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvQuantity"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintTop_toTopOf="@+id/ivProduct"
        tools:text="@tools:sample/lorem[4:10]"
        android:clickable="false"/>

    <TextView
        android:id="@+id/tvQuantity"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        tools:text="@tools:sample/lorem[4:10]"
        app:layout_constraintBottom_toBottomOf="@+id/ivProduct"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintHorizontal_bias="0.050"
        android:clickable="false"/>
    <TextView
        android:id="@+id/tvReceiverTime"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        tools:text="@tools:sample/lorem[4:10]"
        app:layout_constraintTop_toBottomOf="@+id/tvQuantity"
        app:layout_constraintStart_toEndOf="@+id/ivProduct"
        app:layout_constraintHorizontal_bias="0.050"
        android:clickable="false"/>
    <Button
        android:id="@+id/btnRate"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="Đánh giá"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"
        android:onClick="refuseOrder_onClick"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:textSize="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvReceiverTime"/>

</androidx.constraintlayout.widget.ConstraintLayout>